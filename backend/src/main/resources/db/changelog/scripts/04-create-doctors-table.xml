<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">

    <changeSet author="lissz" id="04">
        <preConditions onFail="WARN">
            <not>
                <tableExists tableName="doctors"/>
            </not>
        </preConditions>

        <createTable tableName="doctors">
            <column name="user_id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"
                             foreignKeyName="fk_doctors_users"
                             referencedTableName="users"
                             referencedColumnNames="user_id"/>
            </column>
            <column name="pwz" type="VARCHAR(7)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="specialization_id" type="BIGINT">
                <constraints nullable="false" 
                             foreignKeyName="fk_doctor_specialization"
                             referencedTableName="specializations"
                             referencedColumnNames="specialization_id"/>
            </column>
        </createTable>

        <addUniqueConstraint
                tableName="doctors"
                columnNames="pwz"
                constraintName="uq_doctors_pwz"/>
    </changeSet>
</databaseChangeLog>
