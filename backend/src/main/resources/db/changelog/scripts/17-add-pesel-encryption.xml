<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="17-add-pesel-encryption" author="lissz">
        <addColumn tableName="patients">
            <column name="pesel_encrypted" type="VARCHAR(512)"/>
            <column name="pesel_hash" type="VARCHAR(64)"/>
        </addColumn>

        <createIndex tableName="patients" indexName="idx_patients_pesel_hash" unique="true">
            <column name="pesel_hash"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
