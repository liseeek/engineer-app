<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">

    <changeSet author="lissz" id="14">
        <preConditions onFail="WARN">
            <not>
                <tableExists tableName="visit_notes"/>
            </not>
        </preConditions>

        <createTable tableName="visit_notes">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="appointment_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="fk_visit_note_appointment"
                             referencedTableName="appointments"
                             referencedColumnNames="appointment_id"/>
            </column>
            <column name="doctor_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="fk_visit_note_doctor"
                             referencedTableName="doctors"
                             referencedColumnNames="user_id"/>
            </column>
            <column name="diagnosis" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="prescription" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="notes" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addUniqueConstraint
                tableName="visit_notes"
                columnNames="appointment_id"
                constraintName="uq_visit_note_appointment"/>
    </changeSet>

</databaseChangeLog>
